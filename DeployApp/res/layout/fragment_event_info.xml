<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/eventsbg"
        />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        
            <TextView
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Deploy Release"
                android:textColor="#FFF"
                android:textSize="38sp" />
    
            <TextView
                android:id="@+id/partyCreator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ben Harvey"
                android:textColor="#FFF"
                android:textSize="24sp" />
    
            <ImageView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line" />
            
            <ImageView
                android:id="@+id/eventPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            
            <ProgressBar
                        android:id="@+id/loadingProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    />
                
                <TextView
                    android:id="@+id/descrip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Come by for a fine evening of wining and dining while ordourvs are served by the waitress and waiters of your choice"
                    android:textColor="#FFF"
                    android:textSize="22sp" />
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    />
            
            </LinearLayout>
            
            <ImageView
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
            
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2">
                    
                    <ImageView
                        android:id="@+id/etaLogo"
                        android:layout_width="44dp"
                        android:layout_height="46dp"
                        android:paddingLeft="16dp"
                        android:src="@drawable/etalogo" />
                    
                    <TextView
                        android:id="@+id/realDateView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oct 10 2011"
                        android:textColor="#FFF"
                        android:textSize="26sp" />
                    
                    <ImageView
                        android:id="@+id/distLogo"
                        android:layout_width="45dp"
                        android:layout_height="46dp"
                        android:paddingLeft="16dp"
                        android:src="@drawable/distancelogo" />
                    
                    <TextView
                        android:id="@+id/durationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 min left"
                        android:textColor="#FFF"
                        android:textSize="26sp" />
                
                </GridLayout>
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
            
            </LinearLayout>
            
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">
        
                <ImageButton
                    android:id="@+id/attendingButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:onClick="markAttending"
                    android:scaleType="centerInside"
                    android:src="@drawable/attendingbg"
                    android:background="@null" />
            
                <ImageButton
                    android:id="@+id/calendarButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:onClick="goToCal"
                    android:scaleType="centerInside"
                    android:src="@drawable/calendarbutton"
                    android:background="@null" />
            
            </GridLayout>
        
        </LinearLayout>

    </ScrollView>

</FrameLayout>